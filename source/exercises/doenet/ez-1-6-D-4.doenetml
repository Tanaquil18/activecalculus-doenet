<!-- a version of this exercise was written/shared at the May 2022 Doenet Workshop -->
<!-- https://www.doenet.org/publiceditor/_26CORkvLfyRDEZsFeud1l/_JY6VR6r4fzWCcL4mhqs6h -->

<!-- this particular version is modified to include second derivatives -->

<setup>

<function name="f1" styleNumber="1">x^4/4 - (11*x^3)/4 + (165*x^2)/16 - (117*x)/8 + 81/16</function>
<function name="f1p" styleNumber="2">x^3 - (33*x^2)/4 + (330*x)/16 - 117/8</function>
<function name="f1pp" styleNumber="3">3*x^2 - 33*x/2 + 330/16</function>  
  
<function name="f2" styleNumber="1">x + exp(-1*x)</function>
<function name="f2p" styleNumber="2">1 - exp(-1*x)</function>
<function name="f2pp" styleNumber="3">exp(-1*x)</function>
</setup>

<p>
In each plot, identify which of the curves is the graph of the derivative of the other.
</p>

<graph xmin="-1" xmax="6" ymin="-3" ymax="5" showNavigation="false">

  $f1
  <label anchor="(5.45, 1.5)">
    <m>y = h(x)</m>
  </label>  
  $f1p
  <label anchor="(2.75,1.5)">
    <m>y = f(x)</m>
  </label> 
  $f1pp
  <label anchor="(3.45, -2)">
    <m>y = g(x)</m>
  </label>   
  
</graph>

<p>The function 
  <choiceInput inline name="cdf1">
    <choice>?</choice>    
    <choice>f(x)</choice>
    <choice>g(x)</choice>
    <choice>h(x)</choice>
  </choiceInput>
  is the first derivative of the function
    <choiceInput inline name="cf1">
    <choice>?</choice>    
    <choice>f(x)</choice>
    <choice>g(x)</choice>
    <choice>h(x)</choice>
  </choiceInput>, and the function   
  <choiceInput inline name="cd2f1">
    <choice>?</choice>    
    <choice>f(x)</choice>
    <choice>g(x)</choice>
    <choice>h(x)</choice>
  </choiceInput> is the second derivative of the function
    <choiceInput inline name="cf1a">
    <choice>?</choice>    
    <choice>f(x)</choice>
    <choice>g(x)</choice>
    <choice>h(x)</choice></choiceInput>.

  <answer matchPartial>
    <award>
      <when>
        $cdf1=<text>f(x)</text> and $cf1 = <text>h(x)</text> and $cd2f1=<text>g(x)</text> and $cf1a = <text>h(x)</text>
      </when>
    </award>
  </answer>
</p>

<graph xmin="-2" xmax="3" ymin="-1.5" ymax="3.5" showNavigation="false">

  $f2
  <label anchor="(2,2.5)">
    <m>y = g(x)</m>
  </label>  
  $f2p
  <label anchor="(2,1)">
    <m>y = h(x)</m>
  </label> 
  $f2pp
  <label anchor="(-0.55,2.5)">
    <m>y = f(x)</m>
  </label>   
  
</graph>

<p>The function 
  <choiceInput inline name="cdf2">
    <choice>?</choice>    
    <choice>f(x)</choice>
    <choice>g(x)</choice>
    <choice>h(x)</choice>
  </choiceInput>
  is the first derivative of the function
    <choiceInput inline name="cf2">
    <choice>?</choice>    
    <choice>f(x)</choice>
    <choice>g(x)</choice>
    <choice>h(x)</choice>
  </choiceInput>, and the function   
  <choiceInput inline name="cd2f2">
    <choice>?</choice>    
    <choice>f(x)</choice>
    <choice>g(x)</choice>
    <choice>h(x)</choice>
  </choiceInput> is the second derivative of the function
    <choiceInput inline name="cf2a">
    <choice>?</choice>    
    <choice>f(x)</choice>
    <choice>g(x)</choice>
    <choice>h(x)</choice></choiceInput>.

  <answer matchPartial>
    <award>
      <when>
        $cdf2=<text>h(x)</text> and $cf2 = <text>g(x)</text> and $cd2f2=<text>f(x)</text> and $cf2a = <text>g(x)</text>
      </when>
    </award>
  </answer>
</p>