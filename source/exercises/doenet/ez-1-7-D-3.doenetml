<!-- Author: Christina Safranski                                           -->
<!-- technical help: Virginia Mae                                          -->

<setup>
  <selectFromSequence name="m" from="-1" to="1" exclude="0" />
  <selectFromSequence name="a" from="-1" to="1" numToSelect="1" />       
  <selectFromSequence name="b" from="-1" to="1" numToSelect="1" />
  
<!--   <selectFromSequence name="c" from="1" to="4"/> -->
  <selectFromSequence name="upordown" from="-1" to="1" exclude="0" />

  <function name="line"> $m*x+$b</function>
  <function name="line2">$m(x-$a)+$$line($a)+$upordown</function>

  <math name="c">0</math>

<!-- Virginia's note - the <select> below replaces the previous <select> which had assignNames. Now, we refer to the boolean of the first selected option as $graphSelect[1][2]. (first index is the first selection made of all the options, second index is the second component defined within that option) -->
  
<select name="graphSelect" numToSelect="3">
  <option>
    <graph name="graph1" showNavigation="false" xmin="-2.5" xmax="2.5" ymin="-4" ymax="4">
    <function> $line </function>
  </graph> 
  <boolean>1</boolean>
  </option>
  <option>
    <graph name="graph2" showNavigation="false" xmin="-2.5" xmax="2.5" ymin="-4" ymax="4">
      <function domain="[-2.5,$a-$c)"> $line </function>
      <function domain="[$a+$c,2.5)"> $line </function>
      <endpoint open="true" draggable="false">($a, $$line($a))</endpoint>
    </graph>
    <boolean>1</boolean>
  </option>
  <option>
    <graph name="graph3" showNavigation="false" xmin="-2.5" xmax="2.5" ymin="-4" ymax="4">
      <function domain="[-2.5,$a-$c)"> $line </function>
      <function domain="[$a+$c,2.5)"> $line </function>
      <endpoint open="true" draggable="false">($a, $$line($a))</endpoint>
      <endpoint draggable="false">($a, $$line($a)+$upordown)</endpoint>
    </graph> 
    <boolean>1</boolean>
  </option>
  <option>
    <graph name="graph4" showNavigation="false" xmin="-2.5" xmax="2.5" ymin="-4" ymax="4">
      <function domain="[-2.5,$a-$c)"> $line </function>
      <function domain="[$a+$c,2.5)"> $line2 </function>
      <endpoint open="true" draggable="false">($a, $$line($a))</endpoint>
      <endpoint draggable="false">($a, $$line($a)+$upordown)</endpoint>
    </graph>
    <boolean>0</boolean>
  </option>
 <option>
    <graph name="graph5" showNavigation="false" xmin="-2.5" xmax="2.5" ymin="-4" ymax="4">
      <function domain="[-2.5,$a-$c)"> $line2 </function>
      <function domain="[$a+$c,2.5)"> $line2 </function>
      <endpoint draggable="false">($a, $$line($a))</endpoint>
      <endpoint open="true" draggable="false">($a, $$line($a)+$upordown)</endpoint>
    </graph>
    <boolean>0</boolean>
  </option>
</select>

<mathList name="correctLabels">
<repeatForSequence from="A" to="C" type="letters" name="correctMap" valueName="letter" indexName="i">
    <conditionalContent>
      <case condition="$graphSelect[$i][2]">$letter</case>
      <else />
    </conditionalContent>
  </repeatForSequence>
</mathList>

<boolean name="checkLists" unorderedCompare="true">$correctLabels = $mi1</boolean>

</setup>


<!-- testing -->
<p>correctLabels = $correctLabels</p>
<p>checkLists = $checkLists</p>
<p>a = $a</p> 
<!-- /testing -->

 <p>Which of the following graphs below satisfy the property that <m>\displaystyle \lim_{x\to $a} f(x)= $$line($a) </m>?  Enter the (capital) letters of all such graphs, separated by commas. <mathInput name="mi1" /></p>
 <answer>
    <award>
      <when>$checkLists</when>
    </award>
  </answer>

<sideBySide margins="1%">
  <figure suppressFigureNameInCaption="true">$graphSelect[1][1]<caption>A</caption></figure>
  <figure suppressFigureNameInCaption="true">$graphSelect[2][1]<caption>B</caption></figure>
  <figure suppressFigureNameInCaption="true">$graphSelect[3][1]<caption>C</caption></figure>
</sideBySide>